#post-modal.modal.fade
  .modal-dialog
    .modal-content
      .modal-header
        %buton.close{data: {dismiss: 'modal'}, type: 'button'}
          %span{'aria-hiden' => 'true'} ×
        %h3.modal-title
          週報を書く
        .modal-body
          - post = current_user.posts.build()
          = simple_form_for post, remote: true, html: {id: 'post-form'} do |f|
            = f.input :body, label: false, input_html: {rows: 10}
            .modal-footer
              .text-center
                = f.button :submit, '投稿', class: 'btn btn-primary', data: { dismiss: '送信中...' }