#user-modal.modal.fade
  .modal-dialog
    .modal-content
      .modal-header
        アカウント設定
      .modal-body
        = simple_form_for current_user, url: mine_user_path, method: :patch, remote: true do |f|
          = f.input :nickname, label: 'ニックネーム'
          = f.input :email, label: 'メールアドレス'
          = f.input :mail_notification, label: 'メール通知'
          .modal-footer
            = f.button :submit, class: 'btn btn-primary', data: {dismiss: '送信中...' }